{
  "schemaVersion": 1,
  "id": "angledparticles",
  "version": "${version}",
  "name": "Angled Particles",
  "description": "Bedrock-style particle (and nametag) rotation",
  "authors": ["creeper_host"],
  "contact": {
    "homepage": "https://modrinth.com/mod/angled-particles",
    "issues": "https://github.com/ThatCreeper/AngledParticles/issues",
    "sources": "https://github.com/ThatCreeper/AngledParticles"
  },
  "license": "MIT",
  "icon": "assets/angledparticles/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "com.rabidsharkgames.angledparticles.client.AngledparticlesClient"
    ],
    "main": [
      "com.rabidsharkgames.angledparticles.Angledparticles"
    ]
  },
  "mixins": [
    "angledparticles.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "${minecraft_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/angled-particles",
        "modmenu.modrinth": "https://modrinth.com/mod/angled-particles"
      }
    }
  }
}
